{
  "manifest_version": 2,
  "name": "AWS Identity Center Helper",
  "version": "1.0",
  "description": "Firefox plugin to automatically put console logins from the AWS Identity Center into containers",

  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png"
  },

  "applications": {
      "gecko": {
        "id": "@aws-identity-center-helper",
        "strict_min_version": "58.0"
      }
    },

  "homepage_url": "https://github.com/timsjoberg/aws-identity-center-helper",

  "permissions": [
    "https://*.awsapps.com/start/*",
    "contextualIdentities",
    "tabs",
    "cookies",
    "webRequestBlocking",
    "webRequest"
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
